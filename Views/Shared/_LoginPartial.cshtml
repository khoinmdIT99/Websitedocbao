@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Xin chào, @User.Identity.GetUserName()<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Manager News", "Index", "News")</li>
                @*<li>@Html.ActionLink("Manager NewsImages", "Index", "NewsImages")</li>*@
                <li>@Html.ActionLink("Manager Regions", "Index", "Regions")</li>
                <li>@Html.ActionLink("Manager Categories", "Index", "Categories")</li>
                
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a></li>
            </ul>
        </li>

            @*<li>
            @Html.ActionLink("Chào " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>*@
        @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a></li>*@
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
